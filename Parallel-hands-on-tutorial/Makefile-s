# change these three according to your environment, or load apropriate
# modules(1)
HDF5="add your path to HDF5 installtion - sequential"
CC="add your path to h5cc"

CPPFLAGS=-I${HDF5}/include
LDFLAGS=-L${HDF5}/lib


PROGRAMS= h5_ex0 h5_ex1 

all: $(PROGRAMS)

h5_ex0: h5_ex0.c
	$(CC) $(CFLAGS) $(CPPFLAGS) $^ -o $@ $(LDFLAGS) -lhdf5

h5_ex1: h5_ex1.c
	$(CC) $(CFLAGS) $(CPPFLAGS) $^ -o $@ $(LDFLAGS) -lhdf5

clean:
	rm -f *.o $(PROGRAMS)

